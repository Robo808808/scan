@startdot
digraph G {
  graph [rankdir=LR, bgcolor="white"];
  node  [shape=plaintext, fontname="Segoe UI", fontsize=11];
  edge  [style=invis];

  rto [label=<
    <TABLE BORDER="1" CELLBORDER="1" CELLSPACING="0" CELLPADDING="6">
      <TR BGCOLOR="#f2f2f2">
        <TD ALIGN="left" VALIGN="top" WIDTH="220"><B>Objective</B></TD>
        <TD ALIGN="left" VALIGN="top" WIDTH="340"><B>Controlled By</B></TD>
        <TD ALIGN="left" VALIGN="top" WIDTH="380"><B>Formula / Rule</B></TD>
        <TD ALIGN="left" VALIGN="top" WIDTH="240"><B>Parameters to Set</B></TD>
      </TR>
      <TR>
        <TD>RTO (failover time)</TD>
        <TD>Observer detection + failover threshold</TD>
        <TD><FONT FACE="Consolas">RTO ≈ (PingInterval × PingRetry) + FSFO_Threshold</FONT></TD>
        <TD><FONT FACE="Consolas">ObserverPingInterval, ObserverPingRetry, FastStartFailoverThreshold</FONT></TD>
      </TR>
      <TR>
        <TD>RPO (data loss)</TD>
        <TD>Redo transport &amp; apply lag gate</TD>
        <TD><FONT FACE="Consolas">RPO ≈ APPLY_LAG; enforce with LagLimit</FONT></TD>
        <TD><FONT FACE="Consolas">FastStartFailoverLagLimit, FastStartFailoverLagType</FONT></TD>
      </TR>
      <TR>
        <TD>Zero / Near-zero loss</TD>
        <TD>SYNC + AFFIRM to local standby</TD>
        <TD>Commit waits for remote receipt/flush</TD>
        <TD><FONT FACE="Consolas">RedoRoutes / LOG_ARCHIVE_DESTx (SYNC/AFFIRM)</FONT></TD>
      </TR>
      <TR>
        <TD>Failover target priority</TD>
        <TD>Designated target ordering</TD>
        <TD>Prefer local SYNC standby first</TD>
        <TD><FONT FACE="Consolas">FastStartFailoverTarget</FONT></TD>
      </TR>
      <TR>
        <TD>Split-brain avoidance</TD>
        <TD>Primary shutdown on isolation</TD>
        <TD>Shut down old primary after threshold</TD>
        <TD><FONT FACE="Consolas">FastStartFailoverPmyShutdown (optional)</FONT></TD>
      </TR>
      <TR>
        <TD>Silent “can’t create session” fault</TD>
        <TD>Periodic reconnect test</TD>
        <TD>Validates new session creation path</TD>
        <TD><FONT FACE="Consolas">ObserverReconnect</FONT></TD>
      </TR>
      <TR>
        <TD>Replay feasibility</TD>
        <TD>Deterministic workload</TD>
        <TD>Disable replay if outcome would differ</TD>
        <TD><FONT FACE="Consolas">acchk; code review</FONT></TD>
      </TR>
    </TABLE>
  >];
}
@enddot